@model CreatePersonViewModel
@using Core.Abstracts.Services

@*Dependency Injection View versiyonudur. Çok gerekmedikçe kullanılmaz.*@
@*@inject IDepartmentService departmentService*@

@{
    ViewData["Title"] = "Create";
    //Model.Departments = departmentService.GetDepartmentsForList();
}

<h1>Create</h1>

<h4>NewPersonDTO</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            @Html.AntiForgeryToken()
            <div class="form-group">
                <label asp-for="NewPerson.Prefix" class="control-label"></label>
                <input asp-for="NewPerson.Prefix" class="form-control" />
                <span asp-validation-for="NewPerson.Prefix" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="NewPerson.Firstname" class="control-label"></label>
                <input asp-for="NewPerson.Firstname" class="form-control" />
                <span asp-validation-for="NewPerson.Firstname" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="NewPerson.Middlename" class="control-label"></label>
                <input asp-for="NewPerson.Middlename" class="form-control" />
                <span asp-validation-for="NewPerson.Middlename" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="NewPerson.Lastname" class="control-label"></label>
                <input asp-for="NewPerson.Lastname" class="form-control" />
                <span asp-validation-for="NewPerson.Lastname" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="NewPerson.Suffix" class="control-label"></label>
                <input asp-for="NewPerson.Suffix" class="form-control" />
                <span asp-validation-for="NewPerson.Suffix" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="NewPerson.Email" class="control-label"></label>
                <input asp-for="NewPerson.Email" class="form-control" />
                <span asp-validation-for="NewPerson.Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="NewPerson.DepartmentId" class="control-label"></label>
                <select asp-for="NewPerson.DepartmentId" asp-items="@Model.Departments" class="form-control"></select>
                <span asp-validation-for="NewPerson.DepartmentId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
